<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActivityLeaveDetail">

    <include layout="@layout/top_home_activity" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/iv_height_15">

        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to hometown"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:src="@drawable/ic_user"
            android:id="@+id/iv_approve_name"
            android:layout_width="@dimen/iv_height_16"
            android:layout_height="@dimen/iv_height_16"
            android:layout_marginTop="@dimen/iv_height_25"
            app:layout_constraintStart_toStartOf="@+id/tv_reason"
            app:layout_constraintTop_toBottomOf="@+id/tv_reason" />

        <TextView
            android:layout_marginLeft="@dimen/iv_height_10"
            android:id="@+id/tv_approve_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_25"
            android:text="Pheaktra Ky"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintLeft_toRightOf="@+id/iv_approve_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_reason" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_25"
            android:text="Status:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintStart_toStartOf="@+id/iv_approve_name"
            app:layout_constraintTop_toBottomOf="@+id/iv_approve_name" />

        <TextView
            android:id="@+id/tv_status_pending_approval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_25"
            android:text="Pending Approval"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_status"
            app:layout_constraintTop_toBottomOf="@+id/tv_approve_name" />

        <TextView
            android:id="@+id/tv_type_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="Type of Leave:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintStart_toStartOf="@+id/tv_status"
            app:layout_constraintTop_toBottomOf="@+id/tv_status"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="Annual Leave"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_type_leave"
            app:layout_constraintTop_toBottomOf="@+id/tv_status_pending_approval" />

        <View
            android:id="@+id/view1"
            android:layout_marginTop="@dimen/iv_height_15"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_4"
            app:layout_constraintTop_toBottomOf="@+id/tv_type_leave"/>

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="Start Day:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintStart_toStartOf="@+id/view1"
            app:layout_constraintTop_toBottomOf="@+id/view1"/>

        <TextView
            android:id="@+id/tv_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="12 March, 2021"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_start"
            app:layout_constraintTop_toBottomOf="@+id/view1" />

        <TextView
            android:id="@+id/tv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="End Day:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintStart_toStartOf="@+id/tv_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_start"/>

        <TextView
            android:id="@+id/tv_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="13 March, 2021"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_end"
            app:layout_constraintTop_toBottomOf="@+id/tv_start_date" />

        <TextView
            android:id="@+id/tv_start_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="Start Time:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintStart_toStartOf="@+id/tv_end"
            app:layout_constraintTop_toBottomOf="@+id/tv_end"/>

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="8:00 AM"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_start_t"
            app:layout_constraintTop_toBottomOf="@+id/tv_end_date" />

        <TextView
            android:id="@+id/tv_end_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="End Time:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintStart_toStartOf="@+id/tv_start_t"
            app:layout_constraintTop_toBottomOf="@+id/tv_start_t"/>

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="5:00 PM"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_end_t"
            app:layout_constraintTop_toBottomOf="@+id/tv_start_time" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="Durations:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintStart_toStartOf="@+id/tv_end_t"
            app:layout_constraintTop_toBottomOf="@+id/tv_end_t"/>

        <TextView
            android:id="@+id/tv_duration_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="1 Day"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_end_t"
            app:layout_constraintTop_toBottomOf="@+id/tv_end_time" />

        <View
            android:id="@+id/view2"
            android:layout_marginTop="@dimen/iv_height_15"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_4"
            app:layout_constraintTop_toBottomOf="@+id/tv_duration"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_supervisor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="Supervisor/Manager:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/view2"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_supervisor_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="Pheaktra Ky"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_approve"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <TextView
            android:id="@+id/tv_approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="Approve By:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintStart_toStartOf="@+id/tv_supervisor"
            app:layout_constraintTop_toBottomOf="@+id/tv_supervisor"/>

        <TextView
            android:id="@+id/tv_approve_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="Pheaktra Ky"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_supervisor"
            app:layout_constraintTop_toBottomOf="@+id/tv_supervisor_" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="Request For:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintStart_toStartOf="@+id/tv_approve"
            app:layout_constraintTop_toBottomOf="@+id/tv_approve"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_request_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="Person B"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_approve"
            app:layout_constraintTop_toBottomOf="@+id/tv_approve_by" />

        <TextView
            android:id="@+id/tv_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="Cover By:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintStart_toStartOf="@+id/tv_request"
            app:layout_constraintTop_toBottomOf="@+id/tv_request"/>

        <TextView
            android:id="@+id/tv_conver_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="Person A"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_cover"
            app:layout_constraintTop_toBottomOf="@+id/tv_request_for" />

        <View
            android:id="@+id/view3"
            android:layout_marginTop="@dimen/iv_height_15"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_4"
            app:layout_constraintTop_toBottomOf="@+id/tv_cover"/>

        <Button
            android:id="@+id/btn_reject"
            android:layout_width="@dimen/iv_height_185"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round_white"
            android:text="REJECT"
            android:textColor="@color/red_A400"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_approval"
            android:layout_width="@dimen/iv_height_185"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:text="APPROVE"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_reject" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>